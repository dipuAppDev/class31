<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:src="@drawable/bangladesh_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/conImage"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:padding="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bangladesh"
        android:id="@+id/conName"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/conImage"
        app:layout_constraintStart_toStartOf="@id/conImage"
        app:layout_constraintEnd_toEndOf="@id/conImage"
        android:layout_marginTop="10dp"
        />
    <ScrollView
        android:layout_width="350dp"
        android:layout_height="450dp"
        app:layout_constraintTop_toBottomOf="@id/conName"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@id/conName"
        app:layout_constraintEnd_toEndOf="@id/conName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/conLongDetails"
            android:text="@string/bangladesh_long_details"
            android:justificationMode="inter_word"/>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>